<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="168dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:id="@+id/coverImage"

            android:scaleType="centerCrop"
            android:src="@drawable/photo_sample"
            />

        <View
            android:layout_width="match_parent"
            android:background="@color/light_black"
            android:alpha="0.2"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:padding="16dp"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="centerCrop"
            android:id="@+id/profileImage"
            android:src="@drawable/profile_sample"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/profileImage"
                android:layout_toLeftOf="@+id/follwImage"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jun Lee"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/theme_white"
                android:id="@+id/profileName"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="125 Follower Â· 227 Following"
                    android:textSize="13sp"
                    android:alpha="0.8"
                    android:textColor="@color/theme_white"
                    android:id="@+id/followStatus"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/follow"
                android:id="@+id/follwImage"/>
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:weightSum="3"
        android:background="@color/theme_white"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/dayButton"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/light_black"
                    android:text="142"
                    android:id="@+id/dayCount"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/light_gray"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="DAYS"
                    />
            </LinearLayout>

            <View
                android:id="@+id/daySelectBar"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:background="@color/theme_color"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/photoButton"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:text="1249"
                    android:id="@+id/photoCount"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="PHOTOS"
                    />
            </LinearLayout>

            <View
                android:id="@+id/photoSelectBar"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:background="@color/theme_color"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/likeButton"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="735"
                    android:id="@+id/loveCount"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="LIKES"
                    />
            </LinearLayout>

            <View

                android:id="@+id/loveSelectBar"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:background="@color/theme_color"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme_color"
                    android:text="142"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/theme_color"
                    android:layout_height="wrap_content"
                    android:text="DAYS"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:background="@color/theme_color"
                />
        </RelativeLayout>
    </LinearLayout>
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              android:name="com.google.android.gms.maps.SupportMapFragment"
              android:id="@+id/map"
              android:layout_width="match_parent"
              android:layout_height="match_parent"/>
</LinearLayout>