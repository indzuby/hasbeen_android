<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/gallery_box"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <example.test.hasBeen.utils.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/slidingLayout"
        android:gravity="bottom"
        sothree:shadowHeight="0dp"
        sothree:paralaxOffset="200dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/map_box"
            android:layout_height="160dp">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                      android:name="com.google.android.gms.maps.SupportMapFragment"
                      android:id="@+id/map"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"/>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/slidingContainer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                         android:layout_width="match_parent"
                         android:id="@+id/galleryTopLayout"
                         android:layout_below="@+id/transparentView"
                         android:background="@color/list_background"
                         android:layout_height="wrap_content">

                <ListView
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="#00000000"
                    android:id="@+id/galleryL1ListView"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:orientation="vertical"
                    android:background="@color/day_background"
                    android:id="@+id/day_top_box"
                    android:alpha="0.9">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/theme_color"
                        android:id="@+id/galleryL1dayTopTextDate"
                        android:paddingLeft="16dp"
                        android:paddingTop="16dp"
                        android:textSize="16sp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="2015년 1월 1일"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/galleryL1dayTopTextDate"
                        android:id="@+id/galleryL1dayTopTextArea"
                        android:paddingLeft="16dp"
                        android:textColor="@color/light_black"
                        android:textSize="13sp"
                        android:text="Area1 - Araea7"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/day_shadow_bottom"
                        android:alpha="0.8"
                        android:id="@+id/shadow"
                        android:layout_alignParentBottom="true"
                        />
                </RelativeLayout>


            </FrameLayout>
        </RelativeLayout>
    </example.test.hasBeen.utils.SlidingUpPanelLayout>
    <ImageButton
        android:id="@+id/fab"
        android:background="@drawable/share_effect"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/share"
        />
</RelativeLayout>