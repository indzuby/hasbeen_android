<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="10dp"
              android:weightSum="8"
              >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:id="@+id/searchView">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_mountain"
            android:id="@+id/galleryL2CategoryIcon"
            android:layout_margin="0dp"
            android:padding="0dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/galleryL2Line"
            android:layout_margin="0dp">
            <View
                android:layout_width="3dp"
                android:layout_height="wrap_content"
                android:background="@color/theme_color"
                />

        </LinearLayout>

     </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="7">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/galleryL2TextTime"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:text="10:22AM - 11:34Am"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/galleryL2TextArea"
            android:textSize="15dp"
            android:text="Area 1, Norway"/>

        <GridView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/galleryL2GridView"
            android:numColumns="3"
            android:choiceMode="multipleChoiceModal"
            />

    </LinearLayout>

</LinearLayout>

