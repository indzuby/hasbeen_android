<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/theme_white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="vertical"
        android:background="@color/day_background"
        android:id="@+id/day_top_box"
        android:alpha="0.8">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/imageBox"
            android:paddingLeft="16dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_color"
                android:id="@+id/date"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="16sp"
                android:text="2015년 1월 1일"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:id="@+id/area"
                android:textColor="@color/light_black"
                android:textSize="13sp"
                android:text="Area1 - Araea7"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:id="@+id/imageBox"
            android:layout_alignParentRight="true"
            >

            <ImageView
                android:layout_width="48dp"
                android:src="@drawable/photo_sample"
                android:scaleType="centerCrop"
                android:layout_height="48dp"/>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#000000"

        android:alpha="0.1"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:id="@+id/title"
            android:paddingBottom="4dp"
            android:background="@color/theme_white"
            android:hint="Auto Title"
            android:textColor="@color/light_black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@+id/title"
            android:id="@+id/line"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/line_color"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:textSize="14sp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_below="@+id/line"
            android:id="@+id/description"
            android:paddingTop="12dp"
            android:lineSpacingExtra="4sp"
            android:paddingBottom="4dp"
            android:layout_above="@+id/line2"
            android:inputType="textMultiLine"
            android:background="@color/theme_white"
            android:hint="Write a something..."
            android:textColor="@color/light_black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_above="@+id/daySelectBox"
            android:id="@+id/line2"
            android:background="@color/line_color"
            />

        <LinearLayout
            android:gravity="center_vertical"
            android:background="@color/list_background"
            android:paddingRight="16dp"
            android:id="@+id/daySelectBox"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:paddingLeft="16dp"
            android:layout_height="48dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/addTrip"
                android:src="@drawable/add_trip_selector"/>

            <TextView
                android:layout_width="match_parent"
                android:text="Day 1 - Swiss Trip"
                android:layout_toRightOf="@+id/addTrip"
                android:textSize="14sp"
                android:textColor="@color/light_black"
                android:layout_marginLeft="6dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/title"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/line_color"
        />
</LinearLayout>