<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/list_background"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="vertical"
        android:background="@color/day_background"
        android:id="@+id/day_top_box"
        android:alpha="0.8">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:alpha="0.08"
            android:layout_alignParentTop="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_color"
            android:id="@+id/galleryL1TextDate"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="16sp"
            android:text="2015년 1월 1일"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/galleryL1TextDate"
            android:id="@+id/galleryL1TextArea"
            android:paddingLeft="16dp"
            android:textColor="@color/light_black"
            android:textSize="13sp"
            android:text="Area1 - Araea7"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/day_shadow_bottom"
            android:alpha="0.8"
            android:id="@+id/shadow"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <ListView
        android:layout_below="@+id/day_top_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:divider="#00000000"
        android:id="@+id/galleryL1DayView"/>
