<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:background="@color/day_background"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:background="@color/day_background"

                  android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"

            android:background="@color/theme_white">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:id="@+id/profileImage"/>

            <LinearLayout
                android:layout_toRightOf="@+id/profileImage"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_black"
                android:textSize="12sp"
                android:fontFamily="sans-serif-regular"

                android:text="Jun Lee"
                android:layout_below="@+id/placeName"
                android:id="@+id/profileName"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:id="@+id/pin"
                android:src="@drawable/map_icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/placeName"
                android:fontFamily="sans-serif-medium"
                android:text="Swiss"
                android:layout_marginTop="-4dp"

                android:textColor="@color/light_black"
                android:layout_toRightOf="@+id/pin"

                android:textSize="14sp"
                />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/date"
                        android:textColor="@color/light_gray"

                        android:layout_alignTop="@+id/profileName"
                        android:layout_alignParentRight="true"
                        android:textSize="12sp"
                        />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/imageBox"
            android:layout_height="@dimen/newsfeed_image_height">
            <!--<include-->
                <!--layout="@layout/newsfeed_image_layout_1">-->

            <!--</include>-->
        </FrameLayout>
        <include layout="@layout/description_layout" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:alpha="0.10"
            android:background="#000000"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/theme_white"
            android:layout_height="32dp">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:id="@+id/loveButton"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/love"
                        android:src="@drawable/photo_like" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:textSize="13dp"

                        android:fontFamily="@string/medium"
                        android:text="Like"
                        android:textColor="@color/light_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/commentButton"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/photo_comment_selector"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="@string/medium"

                        android:text="Comment"
                        android:textSize="13dp"
                        android:textColor="@color/light_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/photo_share_selector" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"

                        android:fontFamily="@string/medium"
                        android:text="Share"
                        android:textSize="13dp"
                        android:textColor="@color/light_gray" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/actionbar_shadow"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/shadow_top"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>