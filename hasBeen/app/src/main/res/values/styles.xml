<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarTabBarStyle">@style/hasBeenActionBar</item>
        <item name="android:actionBarTabStyle">@style/hasBeenActionBarTab</item>
        <item name="actionBarTabBarStyle">@style/hasBeenActionBar</item>
        <item name="actionBarStyle"> @style/hasBeenActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarTabStyle">@style/hasBeenActionBarTab</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="hasBeenActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/tab_bar_selector</item>
        <item name="android:backgroundStacked">@drawable/tab_bar_selector</item>
        <item name="android:backgroundSplit">@drawable/tab_bar_selector</item>
        <item name="android:height">48dp</item>
        <item name="android:showAsAction">never</item>
        <item name="showAsAction">never</item>
        <item name="android:dividerPadding">0dp</item>


        <item name="height">48dp</item>
        <item name="actionBarDivider">@null</item>
        <item name="showDividers">none</item>
        <item name="dividerPadding">0dp</item>
        <item name="windowActionBarOverlay">@null</item>
    </style>

    <style name="hasBeenActionBarTab" parent="Widget.AppCompat.ActionBar.TabBar" >
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/tab_bar_selector</item>
        <item name="background">@drawable/tab_bar_selector</item>
    </style>

    <style name="hasBeenShare" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/ShareActionBar</item>
        <item name="android:actionButtonStyle">@style/ShareMenuButton</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarStyle"> @style/ShareActionBar</item>
        <item name="actionButtonStyle">@style/ShareMenuButton</item>

    </style>
    <style name="ShareActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/theme_color</item>
        <item name="android:backgroundStacked">@color/theme_color</item>
        <item name="android:height">48dp</item>
        <item name="background">@color/theme_color</item>
        <item name="backgroundStacked">@color/theme_color</item>
        <item name="titleTextStyle">@style/ShareTitleStyle</item>
        <item name="height">48dp</item>
    </style>
    <style name="ShareTitleStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ShareMenu" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="ShareMenuButton" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:height">48dp</item>

        <item name="height">48dp</item>
    </style>

    <style name="FullPhoto" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/FullPhoto.ActionBar</item>
        <item name="actionBarStyle">@style/FullPhoto.ActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarDivider">@android:color/transparent</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>
    <style name="FullPhoto.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundStacked">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
        <item name="backgroundStacked">@android:color/transparent</item>

    </style>
    <style name="Signup.TextView" parent="Widget.AppCompat.EditText" >
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/theme_white</item>
        <item name="android:textColorHint">#DDFFFFFF</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>

    </style>
    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar" >

    </style>
</resources>
