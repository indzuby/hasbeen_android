<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/list_background"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
     <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:src="@drawable/photo_sample"
        android:scaleType="center"
        android:id="@+id/photo"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/filter"
        android:background="@drawable/gallery_filter" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:background="#AA000000"
        android:layout_height="wrap_content">
    <include layout="@layout/action_bar_place" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="16dp"
        android:background="@color/transparent"
        android:id="@+id/descriptionLayout"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/date"
            android:textSize="14sp"
            android:textColor="@color/theme_white"
            android:text="July 20, 2014"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:background="@color/theme_white"
            android:layout_height="1dp"/>
        <TextView
            android:layout_width="match_parent"
            android:maxLines="3"
            android:gravity="center_vertical"
            android:minHeight="50dp"
            android:id="@+id/description"
            android:textSize="14sp"
            android:includeFontPadding="false"
            android:textColor="@color/theme_white"
            android:lineSpacingExtra="5dp"
            android:textColorHint="@color/list_background_pressed"
            android:hint="@string/description_hint"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:textSize="14sp"
            android:id="@+id/moreDescription"
            android:textColor="@color/light_gray2"
            android:text="@string/see_more_description"
            android:layout_height="wrap_content" />
        </LinearLayout>
</RelativeLayout>