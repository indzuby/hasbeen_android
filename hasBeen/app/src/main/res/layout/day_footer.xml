<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/day_background"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#000000"
        android:alpha="0.1"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:textColor="@color/light_gray"
        android:paddingLeft="16dp"
        android:background="@color/day_background"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textSize="12sp"
        android:text="@string/comment"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#000000"
        android:alpha="0.1"
        />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/theme_white"
        android:id="@+id/commetBox"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@color/theme_white"
            android:textColor="@color/light_gray"
            android:id="@+id/moreComments"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="12sp"
            android:text="@string/more_comment"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#000000"
            android:alpha="0.1"
            />
        </LinearLayout>

    <include layout="@layout/comment_footer" />
    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/day_background"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            android:layout_gravity="center_vertical"
            />
    <TextView
        android:layout_width="wrap_content"
        android:padding="12dp"
        android:background="@color/day_background"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="@string/recommedation"
        android:textColor="@color/light_gray"
        android:textStyle="bold"
        android:textSize="13sp"
        android:layout_height="48dp"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/recommendationLayout"
        android:background="@color/day_background"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    </LinearLayout>
</LinearLayout>