<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/searchView"
        android:layout_width="72dp"

        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/placeIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center|bottom"

            android:background="@drawable/gallery_icon_oval" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/placeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Area 1, Norway"
                    android:textColor="@color/light_black"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/placeTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10:22AM - 11:34Am"
                    android:textColor="@color/light_gray"
                    android:textSize="11sp" />
                    <TextView
                        android:id="@+id/photoCount"
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/light_gray2"
                        android:layout_alignParentRight="true"
                        android:text="8 photos"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>

        <GridView
            android:id="@+id/galleryL2GridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:choiceMode="multipleChoiceModal"
            android:numColumns="3"
            android:scrollbars="none" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.15"
            android:background="#000000" />
    </LinearLayout>

</LinearLayout>

