<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingRight="8dp"
    android:paddingLeft="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:layout_height="@dimen/gallery_item_height">
    <ImageView
        android:layout_width="match_parent"

        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:id="@+id/mainPhoto"
        android:layout_height="@dimen/gallery_image_height" />
    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/upload_small"
        android:padding="12dp"
        android:visibility="gone"
        android:id="@+id/upload"
        android:layout_gravity="right"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gallery_filter" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/date"
            android:textColor="@color/theme_white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/placeName"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:textColor="@color/theme_white"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:id="@+id/dayStatus"
            android:textColor="@color/theme_white"
            android:textSize="13sp"
            android:alpha="0.7"
            android:layout_height="wrap_content" />

        </LinearLayout>
</FrameLayout>