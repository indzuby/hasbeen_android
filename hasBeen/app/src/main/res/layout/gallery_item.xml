<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/gallery_height">
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/photo_sample"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_height="match_parent" />
    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/upload_small"
        android:padding="12dp"
        android:layout_gravity="right"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gallery_filter" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="July 2, 2014"
            android:textColor="@color/theme_white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:text="Beatenberg, Swiss - Thunersee, Swiss"
            android:textColor="@color/theme_white"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:text="4 Places Â· 23 Photos"
            android:textColor="@color/theme_white"
            android:textSize="13sp"
            android:alpha="0.7"
            android:layout_height="wrap_content" />

        </LinearLayout>
</FrameLayout>