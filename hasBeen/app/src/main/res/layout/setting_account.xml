<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/day_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/day_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/day_background"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/tab_profile"
            android:textColor="@color/light_gray"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:alpha="0.2"
            android:background="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/description_selector"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:weightSum="2">

            <TextView
                style="@style/Setting.Account.TextView"
                android:text="@string/first_name" />

            <EditText
                android:id="@+id/firstName"
                style="@style/Setting.Account.EditText">

                <requestFocus />
            </EditText>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:alpha="0.2"
            android:background="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/description_selector"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:weightSum="2">

            <TextView
                style="@style/Setting.Account.TextView"
                android:text="@string/last_name" />

            <EditText
                android:id="@+id/lastName"
                style="@style/Setting.Account.EditText" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:alpha="0.2"
            android:background="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/description_selector"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:weightSum="2">

            <TextView
                style="@style/Setting.Account.TextView"
                android:text="@string/username" />

            <EditText
                android:id="@+id/userName"
                style="@style/Setting.Account.EditText" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:alpha="0.2"
            android:background="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/description_selector"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:weightSum="2">

            <TextView
                style="@style/Setting.Account.TextView"
                android:text="@string/gender" />

            <TextView
                android:id="@+id/gender"
                style="@style/Setting.Account.EditText"
                android:hint="@string/enter_gender" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:alpha="0.2"
            android:background="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/description_selector"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:weightSum="2">

            <TextView
                style="@style/Setting.Account.TextView"
                android:text="@string/birthday" />

            <TextView
                android:id="@+id/birthday"
                android:textSize="14sp"
                android:textColor="@color/light_gray"
                android:singleLine="true"
                android:textStyle="bold"
                android:layout_height="48dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="@string/enter_birthday"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:alpha="0.2"
            android:background="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/description_selector"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:weightSum="2">

            <TextView
                style="@style/Setting.Account.TextView"
                android:text="@string/city" />

            <EditText
                android:id="@+id/city"
                style="@style/Setting.Account.EditText" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:alpha="0.2"
            android:background="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/description_selector"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:weightSum="2">

            <TextView
                style="@style/Setting.Account.TextView"
                android:text="@string/country" />

            <EditText
                android:id="@+id/country"
                style="@style/Setting.Account.EditText" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:alpha="0.2"
            android:background="#000" />

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/changePassword"
            android:background="@drawable/description_selector"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:alpha="0.2"
                android:background="#000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="@string/change_password"
                android:textColor="@color/light_black"
                android:textSize="15sp"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:alpha="0.2"
                android:background="#000" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/actionbar_shadow" />

    <ImageView
        android:id="@+id/refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/loading" />
</FrameLayout>